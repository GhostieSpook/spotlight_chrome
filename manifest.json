{
	"name": "Spotlight for Chrome",
	"description": "spotlight chrome client",
	"version": "1.2.0.14",
	"manifest_version": 2,
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},

	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},

	"commands": {
	"toggle-pin": {
		"suggested_key": {
		"default": "Ctrl+Space",
		"windows": "Ctrl+Space"
		},
		"description": "Toggle tab pin",
		"global": true
		}
	},

	"permissions": ["desktopCapture", "http://*/" ],

	"update_url": "https://clients2.google.com/service/update2/crx"
}